<Window x:Class="BitFlare.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:inputLogic="clr-namespace:BitFlare.Model.Input_Logic"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/Icon/BitFlare-Icon.ico"
        Title="MainWindow" Height="350" Width="600">
    
    <Border Style="{DynamicResource MainWindowBorder}">
        
        <Grid
            Name="Grid"
            MouseLeftButtonDown="Grid_OnMouseLeftButtonDown"
            Focusable="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="85*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="1" 
                    Background="{StaticResource WhiteBrush}"
                    Height="2"/>

            <!-- Background noise texture -->
            <Rectangle Grid.Row="0" Grid.RowSpan="3">
                <Rectangle.Fill>
                    <ImageBrush
                        ImageSource="/Assets/Texture/noise-pattern-250x250.png"
                        Opacity="0.03"
                        TileMode="Tile"
                        Viewport="0,0,128,128"
                        ViewportUnits="Absolute"
                        Stretch="None"/>
                </Rectangle.Fill>
            </Rectangle>
            
            <!-- Title bar components -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/> <!-- Application name column -->
                    <ColumnDefinition Width="65*"/> <!-- Draggable area column -->
                    <ColumnDefinition Width="15*"/> <!-- Minimize and Close buttons column -->
                </Grid.ColumnDefinitions>
                
                <!-- Application name -->
                <TextBlock Grid.Column="0" 
                           Text="BITFLARE"
                           Style="{StaticResource BasicTextStyle}"
                           Tag="LogoTitleBar"/>
                
                <!-- Draggable middle area -->
                <Rectangle Grid.Column="1"
                           MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                           Style="{StaticResource DraggableArea}"/>
                
                <!-- Minimize and Close buttons -->
                <Grid Grid.Column="2" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/> 
                        <ColumnDefinition Width="32*"/> <!-- Minimize button column-->
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="32*"/> <!-- Close button column -->
                        <ColumnDefinition Width="13*"/> 
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25*"/> <!-- Minimize button column-->
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="25*"/> <!-- Close button column -->
                    </Grid.RowDefinitions>
                    
                    <!-- Minimize button -->
                    <Border Grid.Row="1" Grid.Column="1"
                        Style="{StaticResource ButtonBorderHover}"
                        Tag="MinimizeButtonHover">
                        
                        <Button Grid.Column="0"
                            Content="-" Click="Minimize_Click"
                            Style="{DynamicResource ButtonHover}"/>
                    </Border>
                    
                    <!-- Close button -->
                    <Border Grid.Row="1" Grid.Column="3" 
                            Style="{StaticResource ButtonBorderHover}" 
                            Tag="CloseButtonHover">
                        
                        <Button Grid.Column="1" 
                            Content="x"  Click="Close_Click" 
                            Style="{StaticResource ButtonHover}"/>
                    </Border>
                   
                </Grid>
            </Grid>
            
            
            <!--////////////////////////////////////////////////////////////-->
            
            
            <!-- Main Menu components -->
            <Grid Grid.Row="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="10*"/> <!-- Input field -->
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="6*"/> <!-- Convert button -->
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="25*"/> <!-- Output grid -->
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Converter toggle-->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="32*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Integer toggle-->
                    <Border Grid.Column="1"
                        Style="{StaticResource IntegerToggleBorder}">
                        <Button 
                            x:Name="IntegerToggleer"
                            Command="{Binding IntegerToggle}"
                            Content="INTEGER"
                            Style="{DynamicResource IntegerToggleButton}">
                        </Button>
                    </Border>
                    
                    <!-- IEEE-754 toggle-->
                    <Border Grid.Column="2"
                        Style="{StaticResource Ieee754ToggleBorder}">
                        <Button 
                            x:Name="Ieee754Toggleer"
                            Command="{Binding Ieee754Toggle}"
                            Content="IEEE-754"
                            Style="{DynamicResource Ieee754ToggleButton}">
                        </Button>
                    </Border>
                </Grid>
                
                <!-- Input box -->
                <Border Grid.Row="2" Grid.Column="1"
                        Style="{DynamicResource BasicBorderStyle}"
                        Tag="InputBox">
                    <TextBox
                        GotKeyboardFocus="InputBox_OnGotKeyboardFocus"
                        Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
                        inputLogic:TextBoxCaretBehavior.CaretIndex="{Binding CaretIndex, Mode=TwoWay}"
                        Style="{DynamicResource InputTextBox}"/>
                </Border>
                <!-- Tooltip -->
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="ⓘ"
                           Style="{StaticResource TooltipAnimation}"
                           Tag="ToolTipHover">
                    
                    <TextBlock.ToolTip>
                        <ToolTip Style="{StaticResource ToolTip}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Style="{StaticResource BasicTextStyle}"
                                           Text="RANGE:"
                                           Tag="ToolTipTextBlock"/>
                                <TextBlock Grid.Row="1"
                                           Style="{StaticResource BasicTextStyle}" 
                                           Text="{Binding TooltipBlockOne}"
                                           Tag="ToolTipTextBlock"/>
                                <TextBlock Grid.Row="2"
                                           Style="{StaticResource BasicTextStyle}" 
                                           Text="{Binding TooltipBlockTwo}"
                                           Tag="ToolTipTextBlock"/>
                            </Grid>
                        </ToolTip>
                    </TextBlock.ToolTip>
                    
                </TextBlock>
                
                <!-- Convert button -->
                <Border Grid.Row="4" Grid.Column="1"
                        Style="{DynamicResource ConvertButtonBorderHover}"
                        Tag="ConvertButton">
                    <Button Grid.Column="1"
                            x:Name="ConvertButton"
                            Command="{Binding ConvertInput}"
                            Content="CONVERT"
                            Style="{DynamicResource ConvertButtonHover}"/>
                </Border>
                
                
                <!--////////////////////////////////////////////////////////////-->
                
                
                <!-- Output components -->
                <Grid Grid.Row="6" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*"/> <!-- Output textbox (dynamic) -->
                        <RowDefinition Height="26*"/> <!-- Main output box and copy button -->
                        <RowDefinition Height="16*"/> <!-- Output textbox (static) -->
                        <RowDefinition Height="26*"/> <!-- Hexadecimal output box and copy button -->
                        <RowDefinition Height="16*"/>
                    </Grid.RowDefinitions>
                
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="12*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Output title -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="OUTPUT"
                               Style="{StaticResource BasicTextStyle}"
                               Tag="OutputTitle"/>
                    
                    <!-- Output box -->
                    <Border Grid.Row="1" Grid.Column="0"
                            Style="{StaticResource BasicBorderStyle}">
                        <TextBox
                            Text="{Binding BinaryOutput}"
                            Style="{StaticResource OutputTextBox}"/>
                    </Border>
                    
                    
                    <!-- Hexadecimal title (static) -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="HEXADECIMAL"
                               Style="{StaticResource BasicTextStyle}"
                               Tag="OutputTitle"/>
                    
                    <!-- Hexadecimal output box -->
                    <Border Grid.Row="3" Grid.Column="0"
                            Style="{StaticResource BasicBorderStyle}" >
                        <TextBox
                            Text="{Binding HexadecimalOutput}"
                            Style="{StaticResource OutputTextBox}"
                            Tag="HexadecimalOutputTextBox"/>
                    </Border>
                    
                    <!-- Output copy buttons -->
                    <Border Grid.Row="1" Grid.Column="1"
                            Style="{DynamicResource MainOutputCopyButtonBorderHover}">
                        <Button x:Name="BinaryCopyButton"
                                Command="{Binding CopyBinary}"
                                Content="COPY"
                                Style="{DynamicResource OutputCopyButtonHover}"/>
                    </Border>
                    
                    <!-- Hexadecimal copy button-->
                    <Border Grid.Row="3" Grid.Column="1"
                            Style="{DynamicResource HexadecimalCopyButtonBorderHover}">
                        <Button x:Name="HexadecimalCopyButton"
                                Command="{Binding CopyHexadecimal}"
                                Content="COPY"
                                Style="{DynamicResource HexadecimalCopyButtonHover}"/>
                    </Border>
                    
                </Grid>
            </Grid>
        </Grid>
        
    </Border>
    
</Window>
