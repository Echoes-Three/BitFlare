<Window x:Class="BitFlare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="MainWindow" Height="400" Width="600">
    
    <Border Style="{DynamicResource MainWindowBorder}">
        
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="88*"/>
            </Grid.RowDefinitions>
            
            <!-- Background noise -->
            <Rectangle Grid.Row="0" Grid.RowSpan="2">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Assets/Texture/noise-pattern-250x250.png"
                                Opacity="0.1"
                                TileMode="Tile"
                                Viewport="0,0,128,128"
                                ViewportUnits="Absolute"
                                Stretch="None"/>
                </Rectangle.Fill>
            </Rectangle>
            
            <!-- Title bar border -->
            <Border Grid.Row="0" Style="{StaticResource TitleBar}"/>
            
            <!-- Title bar full style -->
            <Grid Grid.Row="0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/> <!-- Application name column -->
                    <ColumnDefinition Width="65*"/> <!-- Draggable area column -->
                    <ColumnDefinition Width="15*"/> <!-- Minimize and Close buttons column -->
                </Grid.ColumnDefinitions>
                
                <!-- Application name -->
                <TextBlock Grid.Column="0" Text="BITFLARE" Style="{StaticResource BasicTextStyle}" Tag="LogoTitleBar"/>
                
                <!-- Draggable middle area -->
                <Border Grid.Column="1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Style="{StaticResource TitleBar}" Tag="DraggableArea"/>
                
                <!-- Minimize and Close buttons -->
                <Grid Grid.Column="2" Background="Transparent">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/> <!-- Minimize button column-->
                        <ColumnDefinition Width="50*"/> <!-- Close button column -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Minimize button -->
                    <Border Grid.Column="0" x:Name="MinimizeButtonContainer" Style="{StaticResource HoverButtonAnimation}" Tag="MinimizeButtonHover">
                        <Button Grid.Column="0" Content="-" Click="Minimize_Click" Style="{DynamicResource ButtonStyleHover}"/>
                    </Border>
                    
                    <!-- Close button -->
                    <Border Grid.Column="1" x:Name="CloseButtonContainer" Style="{StaticResource HoverButtonAnimation}" Tag="CloseButtonHover">
                        <Button Grid.Column="1" Content="x"  Click="Close_Click" Style="{StaticResource ButtonStyleHover}"/>
                    </Border>
                   
                </Grid>
                
            </Grid>
            
            <!--////////////////////////////////////////////////////////////-->
            
            <!-- Main Menu border -->
            <Border Grid.Row="1" Style="{StaticResource TitleBar}"/>
            
            <!-- Main Menu full style -->
            <Grid Grid.Row="1" >
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="45"/> <!-- Input field -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="45"/> <!-- Convert button -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="75*"/> <!-- Output grid -->
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Input box border -->
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource TitleBar}" Tag="InputBox"/>
                
                <!-- Convert button border and button action -->
                <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource HoverButtonAnimation}" Tag="ConvertButton">
                <!-- add convert event--> <Button Grid.Row="3" Grid.Column="1" Content="CONVERT" Style="{DynamicResource ButtonStyleHover}" Tag="ConvertButtonText"/>
                </Border>
                
                <!-- Output area -->
                <Grid Grid.Row="5" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/> <!-- Output textbox (dynamic) -->
                        <RowDefinition Height="45"/> <!-- Main output box and copy button -->
                        <RowDefinition Height="15"/> <!-- Output textbox (static) -->
                        <RowDefinition Height="45"/> <!-- Hexadecimal output box and copy button -->
                    </Grid.RowDefinitions>
                
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Output textbox (dynamic) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="OUTPUT" Style="{DynamicResource BasicTextStyle}" Tag="DescriptionTextBlock"/>
                    <!-- Main output box -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource TitleBar}"/>
                    <!-- Output textbox (static) -->
                    <TextBlock Grid.Row="2" Grid.Column="0"  Text="HEXADECIMAL" Style="{StaticResource BasicTextStyle}" Tag="DescriptionTextBlock"/>
                    <!-- Hexadecimal output box -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource TitleBar}" />
                    
                    <!-- Grid inside the main output box that holds the copy button-->
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <!-- Free space for main output-->
                            <ColumnDefinition Width="50"/> <!-- Copy button-->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Copy button-->
                        <Border Grid.Column="1"  Style="{DynamicResource HoverButtonAnimation}">
                            <!-- add copy event--> <Button Grid.Row="3" Grid.Column="1" Content="COPY" Style="{DynamicResource ButtonStyleHover}" Tag="CopyButtonHover"/>
                        </Border>
                        
                    </Grid>
                    
                    <!-- Grid inside the hexadecimal output box that holds the copy button-->
                    <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" >
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <!-- Free space for hexadecimal output-->
                            <ColumnDefinition Width="50"/> <!-- Copy button-->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Copy button-->
                        <Border Grid.Column="1"  Style="{DynamicResource HoverButtonAnimation}" Tag="">
                            <!-- add copy event--> <Button Grid.Row="3" Grid.Column="1" Content="COPY" Style="{DynamicResource ButtonStyleHover}" Tag="CopyButtonHover"/>
                        </Border>
                    </Grid>
                    
                </Grid>
                
            </Grid>
            
        </Grid>
    </Border>
</Window>
