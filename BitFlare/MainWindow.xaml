<Window x:Class="BitFlare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="Assets/Icon/BitFlare-Icon.ico"
        Title="MainWindow" Height="400" Width="600">
    
    <Border Style="{DynamicResource MainWindowBorder}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="88*"/>
            </Grid.RowDefinitions>
            
            <!-- Background noise texture -->
            <Rectangle Grid.Row="0" Grid.RowSpan="2">
                <Rectangle.Fill>
                    <ImageBrush
                        ImageSource="Assets/Texture/noise-pattern-250x250.png"
                        Opacity="0.1"
                        TileMode="Tile"
                        Viewport="0,0,128,128"
                        ViewportUnits="Absolute"
                        Stretch="None"/>
                </Rectangle.Fill>
            </Rectangle>
            
            <!-- Title bar components -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/> <!-- Application name column -->
                    <ColumnDefinition Width="65*"/> <!-- Draggable area column -->
                    <ColumnDefinition Width="15*"/> <!-- Minimize and Close buttons column -->
                </Grid.ColumnDefinitions>
                
                <!-- Title bar border -->
                <Border Grid.Column="0" Grid.ColumnSpan="3"
                        Style="{StaticResource BasicBorderStyle}"/>
                
                <!-- Application name -->
                <TextBlock Grid.Column="0"
                    Text="BITFLARE"
                    Style="{StaticResource BasicTextStyle}"
                    Tag="LogoTitleBar"/>
                
                <!-- Draggable middle area -->
                <Border Grid.Column="1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Style="{StaticResource BasicBorderStyle}"
                    Tag="DraggableArea"/>
                
                <!-- Minimize and Close buttons -->
                <Grid Grid.Column="2" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/> <!-- Minimize button column-->
                        <ColumnDefinition Width="50*"/> <!-- Close button column -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Minimize button -->
                    <Border Grid.Column="0"
                        x:Name="MinimizeButtonBorder"
                        Style="{StaticResource ButtonBorderHover}"
                        Tag="MinimizeButtonHover">
                        
                        <Button Grid.Column="0"
                            x:Name="MinimizeButton"
                            Content="-" Click="Minimize_Click"
                            Style="{DynamicResource ButtonHover}"/>
                    </Border>
                    
                    <!-- Close button -->
                    <Border Grid.Column="1" 
                        x:Name="CloseButtonBorder" 
                        Style="{StaticResource ButtonBorderHover}" 
                        Tag="CloseButtonHover">
                        
                        <Button Grid.Column="1" 
                            x:Name="CloseButton" 
                            Content="x"  Click="Close_Click" 
                            Style="{StaticResource ButtonHover}"/>
                    </Border>
                   
                </Grid>
            </Grid>
            
            
            <!--////////////////////////////////////////////////////////////-->
            
            
            <!-- Main Menu components -->
            <Grid Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="45"/> <!-- Input field -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="45"/> <!-- Convert button -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="75*"/> <!-- Output grid -->
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Main Menu border -->
                <Border Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3"
                        Style="{StaticResource BasicBorderStyle}"/>
                
                <!-- Invalid character warning -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                           x:Name="InvalidCharacterWarning"
                           Text="INVALID CHARACTER OR FORMAT"
                           Style="{DynamicResource BasicTextStyle}"
                           Tag="InvalidCharacterWarning"/>
                
                <!-- Input box -->
                <Border Grid.Row="1" Grid.Column="1"
                        x:Name="InputBoxBorder"
                        Style="{DynamicResource BasicBorderStyle}"
                        Tag="InputBox">
                    <TextBox
                        x:Name="InputBox"
                        KeyUp="Utilities_OnKeyUp"
                        GotKeyboardFocus="InputBox_OnGotKeyboardFocus"
                        Style="{DynamicResource InputTextBox}"/>
                </Border>
                
                <!-- Tooltip -->
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="ⓘ"
                           Style="{StaticResource BasicTextStyle}"
                           Tag="ToolTipHover">
                    
                    <TextBlock.ToolTip>
                        <ToolTip Style="{StaticResource ToolTip}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Style="{StaticResource BasicTextStyle}"
                                           Text="ONLY:"
                                           Tag="ToolTipTextBlock"/>
                                <TextBlock Grid.Row="1"
                                           Style="{StaticResource BasicTextStyle}" 
                                           Text="- INTEGERS"
                                           Tag="ToolTipTextBlock"/>
                                <TextBlock Grid.Row="2"
                                           Style="{StaticResource BasicTextStyle}" 
                                           Text="- FLOATING POINTS"
                                           Tag="ToolTipTextBlock"/>
                                <TextBlock Grid.Row="3"
                                           Style="{StaticResource BasicTextStyle}" 
                                           Text="- NORMALIZED E-NOTATION"
                                           Tag="ToolTipTextBlock"/>
                                
                            </Grid>
                        </ToolTip>
                    </TextBlock.ToolTip>
                    
                </TextBlock>
                
                <!-- Convert button -->
                <Border Grid.Row="3" Grid.Column="1"
                        Style="{DynamicResource ConvertButtonBorderHover}"
                        Tag="ConvertButton">
                    <Button Grid.Row="3" Grid.Column="1"
                            x:Name="ConvertButton"
                            Click="ConvertButton_Click"
                            Content="CONVERT"
                            Style="{DynamicResource ConvertButtonHover}"/>
                </Border>
                
                
                <!--////////////////////////////////////////////////////////////-->
                
                
                <!-- Output components -->
                <Grid Grid.Row="5" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/> <!-- Output textbox (dynamic) -->
                        <RowDefinition Height="45"/> <!-- Main output box and copy button -->
                        <RowDefinition Height="15"/> <!-- Output textbox (static) -->
                        <RowDefinition Height="45"/> <!-- Hexadecimal output box and copy button -->
                    </Grid.RowDefinitions>
                
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Output title (dynamic) -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                               x:Name="OutputBoxDynamicTitle"
                               Text="OUTPUT"
                               Style="{DynamicResource BasicTextStyle}"
                               Tag="OutputTitle"/>
                    
                    <!-- Output box -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                            Style="{StaticResource BasicBorderStyle}">
                        <TextBox
                            x:Name="BinaryOutputTextBox"
                            Style="{StaticResource OutputTextBox}"/>
                    </Border>
                    
                    
                    <!-- Hexadecimal title (static) -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               x:Name="HexadecimalOutputBlock"
                               Text="HEXADECIMAL"
                               Style="{StaticResource BasicTextStyle}"
                               Tag="OutputTitle"/>
                    
                    <!-- Hexadecimal output box -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                            Style="{StaticResource BasicBorderStyle}" >
                        <TextBox
                            x:Name="HexadecimalOutputTextBox"
                            Style="{StaticResource OutputTextBox}"
                            Tag="HexadecimalOutputTextBox"/>
                    </Border>
                    
                    <!-- Output copy buttons -->
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <!-- Free space for main output-->
                            <ColumnDefinition Width="50"/> <!-- Copy button-->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Copy button-->
                        <Border Grid.Column="1"
                                x:Name="BinaryCopyButtonBorder"
                                Style="{DynamicResource OutputCopyButtonBorderHover}">
                            <Button Grid.Row="3" Grid.Column="1"
                                    x:Name="OutputCopyButton"
                                    Click="OutputCopyButton_Click"
                                    Content="COPY"
                                    Style="{DynamicResource OutputCopyButtonHover}"/>
                        </Border>
                    </Grid>
                    
                    <!-- Hexadecimal copy button-->
                    <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <!-- Free space for hexadecimal output-->
                            <ColumnDefinition Width="50"/> <!-- Copy button-->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Copy button-->
                        <Border Grid.Column="1"
                                x:Name="HexadecimalCopyButtonBorder"
                                Style="{DynamicResource HexadecimalCopyButtonBorderHover}">
                            <Button Grid.Row="3" Grid.Column="1"
                                    x:Name="HexadecimalCopyButton"
                                    Click="HexadecimalCopyButton_Click"
                                    Content="COPY"
                                    Style="{DynamicResource HexadecimalCopyButtonHover}"/>
                        </Border>
                    </Grid>
                    
                </Grid>
            </Grid>
        </Grid>
        
    </Border>
</Window>
