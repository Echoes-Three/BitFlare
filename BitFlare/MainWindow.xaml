<Window x:Class="BitFlare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BitFlare"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="MainWindow" Height="450" Width="600">
    
    <Border Style="{DynamicResource MainWindowBorder}">
        <Grid>
            
            <!-- Separation of the layout in two areas, title bar and main menu -->
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="88*"/>
            </Grid.RowDefinitions>
            
            <!-- Title bar border -->
            <Border Grid.Row="0" Style="{StaticResource TitleBar}"/>
            
            <!-- Title bar logic -->
            <Grid Grid.Row="0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/> <!-- Application name column -->
                    <ColumnDefinition Width="60*"/> <!-- Draggable area column -->
                    <ColumnDefinition Width="20*"/> <!-- Minimize and Close buttons column -->
                </Grid.ColumnDefinitions>
                
                <!-- Application name -->
                <TextBlock Grid.Column="0" Text="BITFLARE" Style="{StaticResource BasicTextStyle}" Tag="LogoTitleBar"/>
                
                <!-- Draggable middle area -->
                <Border Grid.Column="1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Style="{StaticResource TitleBar}" Tag="DraggableArea"/>
                
                <!-- Minimize and Close buttons -->
                <Grid Grid.Column="2">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="10*"/>

                    </Grid.ColumnDefinitions>
                    
                    
                    <Border Grid.Column="1" x:Name="MinimizeButtonContainer"  Style="{StaticResource MinimizeButtonHoverStyle}" Tag="IsMouseOver">
                        <Button x:Name="MinimizeButton" Click="Minimize_Click" Style="{StaticResource DefaultButtonStyle}"/>
                    </Border>
                    <Border  Grid.Column="3" x:Name="CloseButtonContainer" Style="{StaticResource CloseButtonHoverStyle}" Tag="IsMouseOver" >
                        <Button  x:Name="CloseButton"  Click="Close_Click" Style="{StaticResource DefaultButtonStyle}"/>
                    </Border>
                    
                </Grid>
                
            </Grid>
            
            <!--////////////////////////////////////////////////////////////-->
            
            <!-- Main Menu border -->
            <Border Grid.Row="1" Style="{StaticResource MainMenuStyle}" />
            
            <!-- Main Menu Logic -->
            <Grid Grid.Row="1" >
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="11*"/>
                    <ColumnDefinition Width="26*"/>
                    <ColumnDefinition Width="26*"/>
                    <ColumnDefinition Width="26*"/>
                    <ColumnDefinition Width="11*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource MainMenuStyle}"/>
                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource MainMenuStyle}"/>
                
                <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
                    <!-- Add output grid -->
                </Grid>
                
                
                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Background="LimeGreen" Opacity="0.1"/>
                <Border Grid.Row="2" Grid.Column="2" Background="LimeGreen" Opacity="0.1"/>
                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Background="LimeGreen" Opacity="0.1"/>
                
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Background="Cyan" Opacity="0.1"/>
                <Border Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Background="Cyan" Opacity="0.1"/>
                <Border Grid.Row="2" Grid.Column="1" Background="Cyan" Opacity="0.1"/>
                <Border Grid.Row="2" Grid.Column="3" Background="Cyan" Opacity="0.1"/>
                <Border Grid.Row="1" Grid.RowSpan="3" Grid.Column="4" Background="Cyan" Opacity="0.1"/>
                
                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Background="Cyan" Opacity="0.1"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="INTEGERS" Style="{StaticResource BasicTextStyle}"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="9" Text="128 " Style="{StaticResource BasicTextStyle}"/>
                    
            </Grid>
            
            </Grid>
    </Border>
</Window>
