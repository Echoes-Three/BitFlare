<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Brushes -->
    <SolidColorBrush x:Key="WhiteBrush" Color="White" />
    <SolidColorBrush x:Key="BlackBrush" Color="Black" />
    
    <!-- Typeface -->
    <FontFamily x:Key="IBM BIOS">/BitFlare;Component/Assets/Typefaces/#Perfect DOS VGA 437 Win</FontFamily>
    
    <!--////////////////////////////////////////////////////////////-->
    
    <!-- Window border -->
    <Style x:Key="MainWindowBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="{StaticResource BlackBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BlackBrush}"/>
    </Style>
    
    <!-- Basic text style -->
    <Style x:Key="BasicTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
        <Style.Triggers>
            <Trigger Property="Tag" Value="LogoTitleBar">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
            </Trigger>
            <Trigger Property="Tag" Value="OutputTitle">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Margin" Value="16,0,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
            </Trigger>
            <Trigger Property="Tag" Value="InvalidCharacterWarning">
                <Setter Property="Visibility" Value="Hidden"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
            </Trigger>
            <Trigger Property="Tag" Value="ToolTipHover">
                <Setter Property="Margin" Value="0,0,130,0"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Cursor" Value="Help"/>
                <Setter Property="ToolTipService.InitialShowDelay" Value="0"/>
                <Setter Property="ToolTipService.BetweenShowDelay" Value="0"/>
            </Trigger>
            <Trigger Property="Tag" Value="ToolTipTextBlock">
                <Setter Property="Margin" Value="0,0,0,5"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Cursor" Value="Help"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Basic border -->
    <Style x:Key="BasicBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="4, 4, 4, 3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource WhiteBrush}"/>
        
        <Style.Triggers>
            <Trigger Property="Tag" Value="DraggableArea">
                <Setter Property="Background" Value="#01FFFFFF"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="CloseButtonHover">
                <Setter Property="Margin" Value="4,12,15, 12"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="MinimizeButtonHover">
                <Setter Property="Margin" Value="16,12, 4, 12"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="InputBox">
                <Setter Property="Margin" Value="150, 4"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="ConvertButton">
                <Setter Property="Margin" Value="200, 10"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="BinaryOutputBox">
                <Setter Property="Margin" Value="100, 4"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="HexadecimalOutputBox">
                <Setter Property="Margin" Value="200, 4"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- hoverable border for minimize, close, convert, and both copy buttons -->
    <Style x:Key="ButtonBorderHover" BasedOn="{StaticResource BasicBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="IsEnabled" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Data Triggered output copy button border-->
    <Style x:Key="OutputCopyButtonBorderHover" BasedOn="{StaticResource ButtonBorderHover}" TargetType="{x:Type Border}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Text, ElementName=BinaryOutputTextBox}" Value="">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- Data Triggered hexadecimal copy button border -->
    <Style x:Key="HexadecimalCopyButtonBorderHover" BasedOn="{StaticResource ButtonBorderHover}" TargetType="{x:Type Border}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Text, ElementName=HexadecimalOutputTextBox}" Value="">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- Data Triggered convert button border-->
    <Style x:Key="ConvertButtonBorderHover" BasedOn="{StaticResource ButtonBorderHover}" TargetType="{x:Type Border}">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <!-- <Condition Binding="{Binding Text, ElementName=InputBox}" Value=""/> -->
                    <Condition Binding="{Binding IsValidToConvert}" Value="False"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="IsEnabled" Value="False"/>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>
    
    
    
    <!-- Basic Button -->
    <Style x:Key="ButtonHover" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="IsEnabled" Value="True"/>
        
        <!-- Remove default highlight and background on all buttons-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <!-- Button hover -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource BlackBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Data Triggered hexadecimal copy button hover -->
    <Style x:Key="HexadecimalCopyButtonHover" BasedOn="{StaticResource ButtonHover}" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Width" Value="100"/>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Text, ElementName=HexadecimalOutputTextBox}" Value="">
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="Foreground" Value="DimGray"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- Data Triggered output copy button hover -->
    <Style x:Key="OutputCopyButtonHover" BasedOn="{StaticResource ButtonHover}" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Width" Value="100"/>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Text, ElementName=BinaryOutputTextBox}" Value="">
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="Foreground" Value="DimGray"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- Data Triggered convert button hover -->
    <Style x:Key="ConvertButtonHover" BasedOn="{StaticResource ButtonHover}" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Width" Value="100"/>
        
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <!-- <Condition Binding="{Binding Text, ElementName=InputBox}" Value=""/> -->
                    <Condition Binding="{Binding IsValidToConvert}" Value="False"/>
                </MultiDataTrigger.Conditions>
                
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="Foreground" Value="DimGray"/>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- Output box -->
    <Style x:Key="OutputTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Text" Value=""/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Width" Value="420"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Cursor" Value="Arrow"/>
        
         <!-- Hexadecimal custom box -->
        <Style.Triggers>
            <Trigger Property="Tag" Value="HexadecimalOutputTextBox">
                <Setter Property="Width" Value="260"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Input text box -->
    <Style x:Key="InputTextBox" BasedOn="{StaticResource OutputTextBox}" TargetType="{x:Type TextBox}">
        <Setter Property="IsReadOnly" Value="False"/>
        <Setter Property="Width" Value="165"/>
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="CaretBrush" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="SelectionOpacity" Value="0.5"/>
    </Style>
    
    <!-- Tooltip -->
    <Style x:Key="ToolTip" TargetType="{x:Type ToolTip}">
        <Setter Property="Placement" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="HorizontalOffset" Value="10"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border 
                        Background="Transparent"
                        BorderBrush="{StaticResource WhiteBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                    
                        Padding="{TemplateBinding Padding}">
                    
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>