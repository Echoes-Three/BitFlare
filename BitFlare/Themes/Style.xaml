<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Brushes -->
    <SolidColorBrush x:Key="WhiteBrush" Color="White" />
    <SolidColorBrush x:Key="BlackBrush" Color="Black" />
    
    <!-- Typeface -->
    <FontFamily x:Key="IBM BIOS">/BitFlare;Component/Assets/Typefaces/#Perfect DOS VGA 437 Win</FontFamily>
    
    <!--////////////////////////////////////////////////////////////-->
    
    <!-- Window border design -->
    <Style x:Key="MainWindowBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="{StaticResource BlackBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BlackBrush}"/>
    </Style>
    
    <!-- Title bar design -->
    <Style x:Key="TitleBar" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="4, 4, 4, 3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource WhiteBrush}"/>
        
        <!-- Draggable area style, without the border -->
        <Style.Triggers>
            <Trigger Property="Tag" Value="DraggableArea">
                <Setter Property="Background" Value="#01FFFFFF"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="CloseButtonHover">
                <Setter Property="Margin" Value="4,12,15, 12"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="MinimizeButtonHover">
                <Setter Property="Margin" Value="16,12, 4, 12"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="InputBox">
                <Setter Property="Margin" Value="150, 4"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="ConvertButton">
                <Setter Property="Margin" Value="200, 10"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="BinaryOutputBox">
                <Setter Property="Margin" Value="100, 4"/>
            </Trigger>
            
            <Trigger Property="Tag" Value="HexadecimalOutputBox">
                <Setter Property="Margin" Value="200, 4"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="HoverButtonAnimation" BasedOn="{StaticResource TitleBar}" TargetType="{x:Type Border}">
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Disabling button default style, and applying hover -->
    <Style x:Key="ButtonStyleHover" TargetType="{x:Type Button}">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource BlackBrush}"/>
            </Trigger>
            <Trigger Property="Tag" Value="ConvertButtonText">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Width" Value="100"/>
            </Trigger>
            <Trigger Property="Tag" Value="CopyButtonHover">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Width" Value="100"/>
            </Trigger>
        </Style.Triggers>
        
        
    </Style>
    <Style x:Key="OutputTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Text" Value=""/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Width" Value="420"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        
        <Style.Triggers>
            <Trigger Property="Tag" Value="HexadecimalOutputTextBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Text" Value="#D6FE44"/>
                <Setter Property="Width" Value="260"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BasicTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
        <Style.Triggers>
            <Trigger Property="Tag" Value="LogoTitleBar">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
            </Trigger>
            <Trigger Property="Tag" Value="DescriptionTextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Margin" Value="16,0,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>