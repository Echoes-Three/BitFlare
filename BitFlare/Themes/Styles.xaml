<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Window border design -->
    <Style x:Key="MainWindowBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="{StaticResource DavyGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BlackBrush}"/>
    </Style>
    
    <!-- Title bar design -->
    <Style x:Key="TitleBar" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="4, 4, 4, 3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AlabasterBrush}"/>
        
        <!-- Draggable area style, without the border -->
        <Style.Triggers>
            <Trigger Property="Tag" Value="DraggableArea">
                <Setter Property="Background" Value="#01FFFFFF"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    
    <!-- Title bar base buttons appearance -->
    <Style x:Key="TitleBarButtonsStyle" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AlabasterBrush}"/>
    </Style>
    
    <!-- Close button on hover -->
    <Style x:Key="CloseButtonHoverStyle" TargetType="{x:Type Border}" BasedOn="{StaticResource TitleBarButtonsStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AlabasterBrush}"/>
            </Trigger>
        </Style.Triggers>    
    </Style>
    
    <!-- Minimize button on hover -->
    <Style x:Key="MinimizeButtonHoverStyle" TargetType="{x:Type Border}" BasedOn="{StaticResource TitleBarButtonsStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AlabasterBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    
    <!-- Disabling button default style -->
    <Style x:Key="DefaultButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="Transparent"/>
    
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>
    
    <Style x:Key="MainMenuStyle" BasedOn="{StaticResource TitleBar}" TargetType="{x:Type Border}">
        
        <Style.Triggers>
            <Trigger Property="Tag" Value="MainMenuInteractionButtons">
                <Setter Property="Background" Value="{StaticResource AlabasterBrush}"/>    
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="BasicTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource IBM BIOS}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource AlabasterBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
        <Style.Triggers>
            <Trigger Property="Tag" Value="LogoTitleBar">
                <Setter Property="FontSize" Value="22"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>